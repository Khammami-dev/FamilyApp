{% extends 'front/layout.html.twig' %}
{% block title %}Ajouter réclamation perte des objets{% endblock %}
{% block grandtitre %} Réclamation pour des personnes perdus {% endblock %}
{% block body %}

    <section class="section pt-3 pb-4 bg-light">
        <div class="container py-5" id="form-top">
            <div class="row d-flex justify-content-center">
                <div class="col-md-6 text-center">
                    <form id="contact-form" method="" action="">
                        <div class="row">
                            <div class="col-12">
                                <div class="form-group">
                                    <input type="text" class="form-control form-control-lg" name="titre" placeholder="titre de la réclamation" required="">
                                </div>
                                <div class="form-group">
                                    <input  type="datetime-local" class="form-control form-control-lg" name="date" value="2018-06-12T19:30"
                                            min="2018-06-07T00:00" max="2018-06-14T00:00" required="">
                                </div>
                                <div class="form-group">
                                    <input type="text" class="form-control form-control-lg" name="localisation" placeholder="Localisation" required="">
                                </div>
                                <div class="form-group">
                                    <select class="form-control" id="js-example-basic-single" name="comissariat">
                                        <option>comissariat</option>
                                        <option>hi</option>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <input type="text" class="form-control form-control-lg" name="comissariat" placeholder="comissariat" required="">
                                </div>
                                <div class="form-group">
                                    <select class="form-control" id="js-example-basic-single" name="categorie">
                                        <option>téléphone</option>
                                        <option>Documennts</option>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <input type="text" class="form-control form-control-lg" name="marque" placeholder="Marque">
                                </div>
                                <div class="form-group">
                                    <input type="text" class="form-control form-control-lg" name="num_serie" placeholder="numéro de série">
                                </div>
                                <div class="form-group">
                                    <input type="text" class="form-control form-control-lg" name="couleur" placeholder="couleur">
                                </div>

                            </div>
                        </div>
                    </form>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <div class="custom-file">
                            <input type="file" class="custom-file-input" id="customFileLangHTML" name="image">
                            <label class="custom-file-label" for="customFileLangHTML" data-browse="entrer image">image</label>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="custom-file">
                            <input type="file" class="custom-file-input" id="customFileLangHTML" name="vidéo">
                            <label class="custom-file-label" for="customFileLangHTML" data-browse="entrer vidéo">vidéo</label>
                        </div>
                    </div>
                    <div class="form-group">
                        <textarea class="form-control form-control-lg" name="message" placeholder="Description" required=""></textarea>
                    </div>
                    <label>Publique </label>
                    <div class="form-group">
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio1" value="option1">
                            <label class="form-check-label" for="inlineRadio1">Oui</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio2" value="option2">
                            <label class="form-check-label" for="inlineRadio2">Non</label>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="pt-4">
                    <a href="#" class="btn btn-primary btn-lg ml-2">Envoyer</a>
                    <a href="#" class="btn btn-success btn-lg ml-2">Retourner</a>
                </div>
            </div>
        </div>
        </div>
    </section>

    <script>
        $(document).ready(function() {
            $('.js-example-basic-single').select2();
        });
    </script>

{% endblock %}
